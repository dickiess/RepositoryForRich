/* pages/login/login.wxss */

page {
  background-color: #f6f6f6;
}

/**  背景图  **/

.background-image {
  z-index: -99;
  position: absolute;
  width: 100%;
  height: 100%;
}

.background-image image {
  width: 100%;
  height: 100%;
}

/**  LOGO  **/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 302rpx;
  height: 130rpx;
  margin: 50rpx;
  margin-top: 55px;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/**  交互部分  **/

.input-group {
  margin: 55px auto;
  width: 100%;
}

/**  输入框  **/

.input-line {
  background-color: white;
  border-width: 1px;
  border-color: #e0e0e0;
  margin-top: 1px;
}

.input-number {
  margin: 0 auto;
  width: 230px;
  height: 48px;
  font-size: 14px;
}

.input-box {
  margin: 0 auto;
  width: 230px;
  height: 48px;
}

.input-code {
  display: inline-block;
  width: 110px;
  height: 48px;
  font-size: 14px;
}

/**  按钮  **/

.btn-code {
  display: inline-block;
  margin-left: 20px;
  margin-bottom: 8px;
  background-color: #28a7e1;
  width: 100px;
  height: 32px;
  line-height: 32px;
  font-size: 14px;
  color: white;
}

/**  协议  **/

.agreement {
  margin: 30px auto 0px;
  width: 260px;
  height: 50px;
}

.agreement checkbox-group {
  display: inline-block;
  margin: 0px;
  font-size: 14px;
  height: 50px;
  line-height: 50px;
}

.agreement-label {
  display: inline;
  margin-left: 0px;
  font-size: 14px;
  color: #28a7e1;
  border-width: 0px;
}

/**  按钮  **/

.btn-login {
  margin-top: 12px;
  background-color: #0d6fb8;
  width: 220px;
  height: 42px;
  line-height: 42px;
  font-size: 16px;
  color: white;
}

.btn-login:active {
   background-color: lightgray; 
}