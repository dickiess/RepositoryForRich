/**index.wxss**/
page {
  background-color: #aaa;
}

/**  背景图  **/
.background-image {
  z-index: -99;
  position: absolute;
  width: 100%;
  height:100%;
}

.background-image image {
  width: 100%;
  height:100%;
}

/**  LOGO  **/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 302rpx;
  height: 130rpx;
  margin: 50rpx;
  margin-top: 55px;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/**  交互部分  **/
.input-group {
  margin: 55px auto;
  width: 230px;
}

/**  输入框  **/
.input-number {
  margin:5px auto 16px;
  width: 220px;
  height: 32px;
  background-color: white;
  border-width: 1em;
  border-radius: 5px;
  border-color: #e0e0e0;
  text-align: left;
  font-size: 14px;
}

.input-code {
  display: inline-block;
  margin-left: 5px;
  margin-bottom: 5px;
  width: 100px;
  height: 32px;
  background-color: white;
  border-width: 1px;
  border-radius: 5px;
  border-color: #e0e0e0;
  text-align: left;
  font-size: 14px;
}

/**  按钮  **/
.btn-code {
  display: inline-block;
  margin-left: 20px;
  margin-bottom: 4.5px;
  background-color: #28a7e1;
  width: 100px;
  height: 32px;
  font-size: 14px;
  color: white;
}

.btn-login {
  background-color: blue;
  margin-top: 12px;
  background-color: #0d6fb8;
  width: 220px;
  height: 42px;
  font-size: 16px;
  color: white;
}