/* pages/help/help.wxss */

.service-list {
  padding: 0 20rpx;
}

.service-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}

.service-time {
  margin-top: 16rpx;
  color: #666;
  font-size: 26rpx;
}

.service-text {
  flex: 1;
  margin-left: 20rpx;
  width: 100%;
}

.service-text .service-title {
  margin-top: 8rpx;
  color: #333;
  width: 100%;
  font-size: 28rpx;
  /* 不换行 */
  /* white-space: nowrap; */
  overflow: hidden;
  text-overflow: ellipsis;
}

.service-tags {
  margin: 6rpx 0;
}

.service-tags text {
  padding: 6rpx 16rpx;
   border: 1.5rpx solid #0D6FB8;
  line-height: 1;
  /* color: #0D6FB8; */
  font-size: 26rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  white-space: nowrap;
}

.service-chat image {
  float: right;
  width:  48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
  margin-right: 22rpx;
}

.service-subtitle {
  color: #666;
  font-size: 26rpx;
}

.service-arrow {
  color: #666;
  font-size: 26rpx;
  float: right;
  margin-right: 18rpx;
  margin-top: 6rpx;
}

.filter-sort {
  display: block;
  background: #fff;
}

.filter-sort view {
  flex: 1;
  line-height: 80rpx;
  text-indent: 60rpx;
  max-height: 432rpx;
  overflow-y: auto;
  border-bottom: 1rpx solid #e8e8e8;
}

.filter-sort view.active {
  color: #f7982a;
}

.service-line {
  width: 98%;
  height: 1rpx;
  background-color: #eee;
  margin: 16rpx 0 12rpx 0;

}